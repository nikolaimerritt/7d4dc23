<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Uncover the Mastermind</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Schedule">Schedule</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Suspect" asp-action="Index">Suspects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Hint" asp-action="Index">Hints</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Guess" asp-action="Index">Guesses</a>
                        </li>
                    </ul>
                </div>
                <div class="form-inline">

                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            @if (User.HasClaim("IsAdmin", "True"))
                            {
                                <a href="/Admin">Admin panel</a>
                            }
                            <div class="d-inline">@User.Identity.Name</div>
                            
                            <form class="d-inline" method="post" asp-controller="Login" asp-action="Logout">
                                <input class="btn btn-secondary" type="submit" value="Logout" />
                            </form>
                        }
                        else
                        {
                            <form class="d-inline" method="get" asp-controller="Login" asp-action="Index">
                                <input class="btn btn-secondary" type="submit" value="Login" />
                            </form>
                        }
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-xxl">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted footer-bottom">
        <div class="container text-center mt-4">
            &copy; 2023 - WithSecure
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
