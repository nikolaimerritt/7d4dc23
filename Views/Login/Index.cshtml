
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form class="" method="post" action="/Login/Authenticate">
            <div class="card px-5 py-5" id="form1">
                <div class="form-data">
                    <div class="forms-inputs mb-4"> <span>Username</span> <input class="form-control" name="username" autocomplete="off" type="text">
                    </div>
                    <div class="forms-inputs mb-4"> <span>Password</span> <input class="form-control" name="password"  autocomplete="off" type="password">
                    </div>
                    <input class="mb-3 btn btn-dark w-100" type="submit" value="Login" />
                </div> 
                @if (ViewData.ContainsKey("Error") && ViewData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        @ViewData["Error"]
                    </div>
            }           
            </div>
            </form>
        </div>
    </div>
</div>